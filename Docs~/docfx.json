{
  "metadata": [
    {      
      "dest": "api",
      "includePrivateMembers": false,
      "disableGitFeatures": true,
      "disableDefaultFilter": false,
      "noRestore": true,
      "namespaceLayout": "flattened",
      "memberLayout": "samePage",
      "allowCompilationErrors": true,
      "src": [
        {
          "files": [
            "Runtime/**/*.cs",
            "Editor/**/*.cs"
          ],
          "src": ".."
        }
      ]
    }
  ],
  "build": {
    "dest": "_site",
    "keepFileLink": false,
    "disableGitFeatures": true,
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "getting-started/**.md",
          "getting-started/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "3lk3 Unity.Entities.Utility"
    },
    "template": [
      "default",
      "modern"
    ],
    "xref": [
      "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
    ]
  }
}